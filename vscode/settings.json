{
//					Activity Bar

	"workbench.sideBar.location": "right",
//					Tabs

	"workbench.editor.showTabs": "single",				// Hide all tabs and rest one only tab
	"workbench.editor.showIcons": false,				// hiden Tab icons
	"workbench.editor.labelFormat": "medium",
	"breadcrumbs.enabled": false,
	"workbench.editor.highlightModifiedTabs": false,	// выделение вкладок открытых файлов, которые были изменены, но ещё не сохранены

	"workbench.editor.tabActionCloseVisibility": false,	// отображение кнопки закрытия (X) на вкладках редактора.
	
//					Main
	"window.clickThroughInactive": false,				// поведение окон VS Code при клике на неактивное окно.
	"workbench.statusBar.visible": false,
	"workbench.tips.enabled": false,					// показ советов и подсказок при работе в VS Code.
	"workbench.editor.decorations.colors": false,		// отображение цветных маркеров (цветовых индикаторов) на вкладках открытых файлов
	// "workbench.tree.renderIndentGuides": "none",		// отображение направляющих отступов (indent guides) в деревьях панели


//					Theme
	"workbench.colorTheme": "pustota",
	// "workbench.iconTheme": "ayu",

//					Editor:

	"editor.cursorBlinking": "solid",
	"editor.accessibilitySupport": "off",
	"editor.codeLens": true,
	"editor.dragAndDrop": false,
	"editor.colorDecorators": false,
	"editor.folding": false,							// change to `true` and use ctrl+shift (Mac: `cmd+alt`) + `[` or `]`
	"editor.showFoldingControls": "mouseover",			// ?
	"editor.rulers": [80],
	"editor.fontFamily": "Fira Code, Hack Nerd Font, JetBrains Mono, Consolas, monospace",
	"editor.fontLigatures": true,
	"editor.fontSize": 17,
	//"editor.fontWeight": "normal",					// толщину (жирность) шрифта в редакторе
	"explorer.openEditors.visible": 1,
	"editor.minimap.enabled": false,
	"editor.renderWhitespace": "selection",				// Отображение пробелов и Tab
	"editor.renderLineHighlight": "none",				// Подсветка строки где находится курсор
	"editor.hideCursorInOverviewRuler": false,			// отображение курсора в Overview Ruler true -> скрыты, false -> видны
	"explorer.compactFolders": false,					// свёртывание пустых папок в панели Explorer. true -> объединяет последовательные вложенные папки, которые содержат только одну подпапку, false ->все папки показываются полностью, каждая на своей строке, без объединения.
	"editor.occurrencesHighlight": "off",				// подсветку всех вхождений слова или переменной, на которой находится курсор
	"editor.overviewRulerBorder": false,				// твечает за границу Overview Ruler — вертикальной мини-карты кода справа в редакторе. Overview Ruler — это полоска справа, где видны ошибки, предупреждения, закладки и позиция курсора.
	"editor.bracketPairColorization.enabled": true,		// цветное выделение пар скобок
	"editor.scrollBeyondLastLine": false,				// поведение прокрутки редактора после последней строки кода.
	"editor.snippetSuggestions": "none",				// показ подсказок сниппетов (шаблонов кода) в автодополнении
	"editor.wordWrap": "on",
	"editor.wordWrapColumn": 80,
	"editor.hover.enabled": false,						// появление всплывающих подсказок (hover)
	"editor.stickyScroll.enabled": false,				// липкую прокрутку заголовков блоков кода, Sticky Scroll — это небольшая панель сверху редактора, которая показывает контекст текущего блока кода, даже если ты прокрутил файл вниз.
	"explorer.confirmDragAndDrop": false,				// подтверждение удаления файлов и папок в панели Explorer
	"explorer.decorations.badges": false,				// отображение значков (badges) на иконках файлов и папок в панели Explorer.Badges — это маленькие индикаторы на иконках файлов/папок, которые показывают:  M — modified, U — untracked
	"extensions.ignoreRecommendations": true,			// игнорирование рекомендуемых расширений
	"editor.scrollbar.vertical": "auto",
	"editor.scrollbar.horizontal": "hidden",
	"editor.useTabStops": true,							//
	"editor.insertSpaces": false,						// Использовать табы вместо пробелов
	"editor.detectIndentation": false,					// Отключить автоопределение отступов
	"editor.autoIndent": "brackets",
	// "explorer.compactFolders": false,

//					Files:
	"files.autoSave": "onFocusChange",					// afterDelay

//					Terminal:
	"terminal.integrated.shellIntegration.enabled": false,
	"terminal.integrated.shellIntegration.decorationsEnabled": "never",
	"terminal.integrated.stickyScroll.enabled": false,
	"terminal.integrated.enableMultiLinePasteWarning": "never",
	// "terminal.integrated.defaultProfile.osx": "zsh",
	//  "terminal.integrated.defaultProfile.linux": "bash",
	"terminal.integrated.defaultProfile.linux": "zsh",
	// "terminal.integrated.env.osx": {
	//   "SOBOLE_THEME_MODE": "dark",
	"terminal.integrated.env.linux": {
		"SOBOLE_THEME_MODE": "dark",
	},
	"terminal.integrated.enableVisualBell": true,
	
//					Search
	"search.quickOpen.history.filterSortOrder": "recency",		// порядок сортировки результатов истории поиска в Quick Open
	"workbench.quickOpen.preserveInput": false,					// охранение текста, введённого в Quick Open

//
	"window.newWindowDimensions": "maximized",
	"chat.agent.enabled": false,
		// Customize the cmd+p behavior:
	".quick-input-widget": "top: 25vh !important",

//					Per-language UI settings:
	"[css]": {
		"editor.colorDecorators": true,
	},
	"[c]": {
		"editor.tabSize": 4,
		"editor.insertSpaces": false
	},

/*
//					кастомная настройка UI
//			https://github.com/subframe7536/vscode-custom-ui-style extension:
	  "custom-ui-style.electron": {
	    "frame": false,  // removes the title bar
	    "transparent": true,  // removes white line from the top
	    "titleBarStyle": "hidden",
